<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/divider_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image Container (Left Side) -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imageView_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="Product image" />

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/button_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add to favorites"
                android:scaleType="centerInside"
                android:src="@drawable/ic_star" />

        </FrameLayout>

        <!-- Product Info Section (Middle) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Product Name -->
            <TextView
                android:id="@+id/textView_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="CD Tiêu Đề Sản Phẩm"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- Artist Name -->
            <TextView
                android:id="@+id/textView_artistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tên nghệ sĩ"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="italic" />

            <!-- Publisher -->
            <TextView
                android:id="@+id/textView_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Nhà xuất bản"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Add to Cart Button (Bottom Left) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_addToCart"
                android:layout_width="114dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:text="Mua"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                app:icon="@drawable/ic_nav_cart"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="16dp" />

        </LinearLayout>

        <!-- Price and Action Buttons (Right Side) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Price Section -->
            <TextView
                android:id="@+id/textView_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:minWidth="80dp"
                android:text="159.000đ"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="?attr/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!-- View Details Button (Bottom Right) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_view_details"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:cornerRadius="6dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>