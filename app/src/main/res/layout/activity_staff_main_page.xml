<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.StaffMainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarStaff"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@drawable/header_gradiant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_main_toolbar"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <FrameLayout
        android:id="@+id/fragmentStaffContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavStaff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarStaff" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavStaff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/nav_item_tint"
        app:itemTextColor="@color/nav_item_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_staff_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
