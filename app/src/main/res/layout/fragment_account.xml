    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <!-- CARD USER -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Hàng tên + huy hiệu -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:contentDescription="@string/avatar_description"
                            android:padding="6dp"
                            android:src="@drawable/ic_person" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="10dp">
                            <TextView
                                android:id="@+id/txtGreet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Xin chào,"
                                android:textSize="12sp"
                                android:textStyle="" />

                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mạnh Phú"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/role"
                                style="@style/Widget.Material3.Chip.Assist"
                                android:layout_width="wrap_content"
                                android:layout_height="32dp"
                                android:text="Khách hàng"
                            />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider"
                        android:paddingTop="10dp"
                        android:showDividers="middle"
                        android:weightSum="2">

<!--                        <LinearLayout-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_weight="1"-->
<!--                            android:gravity="center_vertical"-->
<!--                            android:paddingVertical="6dp">-->

<!--                            <ImageView-->
<!--                                android:layout_width="20dp"-->
<!--                                android:layout_height="20dp"-->
<!--                                android:src="@drawable/ic_dashboard_logo" />-->

<!--                            <TextView-->
<!--                                android:id="@+id/txtFPoint"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:paddingStart="6dp"-->
<!--                                android:text="Để đây vì nghĩ nó có ích"-->
<!--                                android:textStyle="bold" />-->
<!--                        </LinearLayout>-->

<!--                        <LinearLayout-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_weight="1"-->
<!--                            android:gravity="center_vertical"-->
<!--                            android:paddingVertical="6dp">-->

<!--                            <ImageView-->
<!--                                android:layout_width="20dp"-->
<!--                                android:layout_height="20dp"-->
<!--                                android:src="@drawable/ic_dashboard_logo" />-->

<!--                            <TextView-->
<!--                                android:id="@+id/txtFreeship"-->
<!--                                android:layout_width="wrap_content"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:paddingStart="6dp"-->
<!--                                android:text="Giống cái bên trái"-->
<!--                                android:textStyle="bold" />-->
<!--                        </LinearLayout>-->
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Đơn hàng của tôi"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- Item 1 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnOrderWaitingPay"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="82dp"
                            android:layout_height="49dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_wait_for_payment" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rotationX="0"
                            android:text="Chờ thanh toán"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnOrderProcessing"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="46dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_truck_delivery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đang giao"
                            android:textSize="12sp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- Item 3 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnOrderCompleted"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="49dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_done" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoàn thành"
                            android:textSize="12sp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- MENU DANH SÁCH -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--                Thay đổi thông tin-->
                <include
                    android:id="@+id/rowUpdateProfile"
                    layout="@layout/row_account_fragment_change_account_info" />
                <include android:id="@+id/rowUserAddress"
                    layout="@layout/row_account_fragment_user_address"/>
                <include layout="@layout/row_account_fragment_term_and_condition" />

                <include layout="@layout/row_account_fragment_user_term" />

                <include layout="@layout/row_account_fragment_q_and_a" />

                <include layout="@layout/row_account_fragment_private_rule" />

                <!-- Hồ sơ cá nhân -->
                <include
                    android:id="@+id/rowChangePassword"
                    layout="@layout/row_account_fragment_change_passsword" />

                <!-- Đăng xuất -->
                <include
                    android:id="@+id/rowLogout"
                    layout="@layout/row_account_fragment_logout" />

                <include layout="@layout/row_account_fragment_delete_account" />

            </LinearLayout>
            <Button
                android:id="@+id/btn_chat_with_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Liên hệ hỗ trợ (Chat)"
                android:backgroundTint="@color/nav_item_tint"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
