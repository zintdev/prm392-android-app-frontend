<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".presentation.activity.OrderCreateActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_order_create"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Tạo đơn hàng"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_order_create">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Danh sách sản phẩm trong đơn hàng -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/surface_light"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/label_order_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm đã chọn"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_order_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/label_order_items"
                    tools:listitem="@layout/item_order"
                    tools:itemCount="2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Form nhập thông tin giao hàng -->
            <include
                layout="@layout/item_order_shipping_address_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Phương thức giao hàng -->
            <include
                layout="@layout/item_order_shipment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Cửa hàng nhận hàng (khi chọn pickup) -->
            <include
                layout="@layout/item_order_pickup_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Phương thức thanh toán -->
            <include
                layout="@layout/item_order_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom bar với tổng tiền và nút đặt hàng -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_bar_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="12dp"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/surface_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <View
                android:id="@+id/divider_top"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/divider_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng:"
                android:textColor="@color/text_secondary_light"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_top" />

            <TextView
                android:id="@+id/text_view_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/primaryColor"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/label_total"
                app:layout_constraintTop_toBottomOf="@id/divider_top"
                tools:text="700.000đ" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_place_order"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:backgroundTint="@color/primaryColor"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Đặt hàng"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_top" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/progress_bar_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>