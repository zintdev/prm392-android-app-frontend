<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/header_gradiant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="Tạo địa chỉ mới"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">




            <!-- Quốc gia (readonly) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quốc gia *">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="false"
                    android:text="Việt Nam" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tỉnh/Thành phố -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilProvince"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tỉnh/Thành phố *">

                <AutoCompleteTextView
                    android:id="@+id/ddProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
<!--                    android:hint="Chọn tỉnh/thành phố" -->

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quận/Huyện -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDistrict"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quận/Huyện *">

                <AutoCompleteTextView
                    android:id="@+id/ddDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
<!--                    android:hint="Chọn quận/huyện" -->

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phường/Xã -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWard"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phường/Xã *">

                <AutoCompleteTextView
                    android:id="@+id/ddWard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
<!--                    android:hint="Chọn phường/xã" -->

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Địa chỉ nhận hàng -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ nhận hàng *">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
<!--                    android:hint="Nhập số nhà, tên đường" -->

            </com.google.android.material.textfield.TextInputLayout>

<!--            <CheckBox-->
<!--                android:id="@+id/cbDefaultBilling"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Địa chỉ thanh toán mặc định" />-->

<!--            <CheckBox-->
<!--                android:id="@+id/cbDefaultShipping"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Địa chỉ giao hàng mặc định" />-->

            <ProgressBar
                android:id="@+id/progress"
                style="@android:style/Animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Nút xác nhận -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Xác nhận"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
