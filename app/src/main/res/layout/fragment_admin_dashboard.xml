<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".presentation.fragment.admin.AdminDashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bảng số liệu"
            android:textColor="#1A237E"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Revenue Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRevenue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#1A237E"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng doanh thu"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewTotalRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="125.5M VND"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Statistics Grid -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardRevenue">

            <!-- Orders Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewOrderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,234"
                        android:textColor="#1A237E"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Đơn hàng"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Products Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textViewProductCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="856"
                        android:textColor="#1A237E"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Sản phẩm"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Management Section Title -->
        <TextView
            android:id="@+id/textViewManagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Quản lý"
            android:textColor="#1A237E"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutStats" />

        <!-- Management Buttons Row 1 -->
        <LinearLayout
            android:id="@+id/layoutManagement1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewManagement">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonStoreProductManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Quản lý nhân viên"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#C0C0C0"
                app:icon="@drawable/ic_user_term"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonStaffManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Danh mục"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#8B4513"
                app:icon="@drawable/ic_store_"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />
        </LinearLayout>

        <!-- Management Buttons Row 2 -->
        <LinearLayout
            android:id="@+id/layoutManagement2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutManagement1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAuthorManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Quản lý tác giả"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#42A5F5"
                app:icon="@drawable/ic_music_artist"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonCategoryManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Danh mục"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#26A69A"
                app:icon="@drawable/ic_category_manager"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />
        </LinearLayout>

        <!-- Management Buttons Row 3 -->
        <LinearLayout
            android:id="@+id/layoutManagement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutManagement2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonProductManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Quản lý đĩa CD"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#8E24AA"
                app:icon="@drawable/ic_music_cd"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPublisherManagement"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Nhà xuất bản"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="#5C6BC0"
                app:icon="@drawable/ic_publisher_manage"
                app:iconGravity="textTop"
                app:iconPadding="4dp"
                app:iconSize="32dp"
                app:iconTint="@color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>