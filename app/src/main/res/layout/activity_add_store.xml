<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.activity.AddStoreActivity">

    <!-- ============================================== -->
    <!--          ĐÃ THÊM Ô NHẬP TÊN CỬA HÀNG           -->
    <!-- ============================================== -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên cửa hàng"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <EditText
        android:id="@+id/et_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Cửa hàng CD Quận 1"
        android:inputType="textCapWords"
        android:layout_marginBottom="16dp"/>
    <!-- ============================================== -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm địa chỉ cửa hàng"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <!-- Ô nhập địa chỉ thủ công -->
    <EditText
        android:id="@+id/et_address_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: 123 Lê Lợi, Quận 1, TPHCM"
        android:inputType="textPostalAddress" />

    <!-- Nút để tìm kiếm địa chỉ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_search_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Tìm kiếm" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pick_on_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn trên bản đồ"
            app:icon="@android:drawable/ic_menu_mylocation" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_selected_address_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#f0f0f0"
        android:padding="8dp"
        android:text="Chưa chọn địa chỉ nào"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_save_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:text="Lưu cửa hàng" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
