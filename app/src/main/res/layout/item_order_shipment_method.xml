<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_light"
    android:layout_marginTop="8dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/label_shipment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức giao hàng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group_shipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_shipment_method">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao tận nơi"
            android:textSize="16sp"
            android:checked="true"
            android:paddingVertical="8dp" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhận tại cửa hàng"
            android:textSize="16sp"
            android:paddingVertical="8dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
