<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Form nhập thông tin cá nhân -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên người nhận"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:maxLines="1"
            tools:text="Nguyễn Văn A" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Số điện thoại"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLines="1"
            tools:text="0123456789" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Danh sách địa chỉ có sẵn -->
    <TextView
        android:id="@+id/label_saved_addresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Chọn địa chỉ giao hàng:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_saved_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxHeight="300dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_order_address"
        tools:itemCount="3" />

    <!-- View hiển thị khi không có địa chỉ -->
    <LinearLayout
        android:id="@+id/layout_no_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_address"
            android:alpha="0.3"
            android:tint="@color/text_secondary_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Chưa có địa chỉ nào được lưu"
            android:textSize="16sp"
            android:textColor="@color/text_secondary_light"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hãy chuyển sang tab 'Nhập địa chỉ mới' để thêm địa chỉ"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_light"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Progress bar khi đang tải -->
    <ProgressBar
        android:id="@+id/progress_bar_addresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

</LinearLayout>