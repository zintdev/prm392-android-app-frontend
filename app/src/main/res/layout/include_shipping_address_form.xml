<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_light"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/label_shipping_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin giao hàng"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tab Layout cho 2 option -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_shipping_info">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập địa chỉ mới" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn địa chỉ có sẵn" />

    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager2 để chứa 2 fragment/view -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_address" />

    <!-- Phương thức giao hàng -->
    <TextView
        android:id="@+id/label_shipment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức giao hàng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_light"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_pager_address" />

    <RadioGroup
        android:id="@+id/radio_group_shipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_shipment_method">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao tận nơi"
            android:textSize="16sp"
            android:checked="true" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhận tại cửa hàng"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>