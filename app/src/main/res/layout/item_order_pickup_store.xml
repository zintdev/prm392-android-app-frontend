<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pickup_store_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="0dp"
    android:visibility="gone"
    app:cardBackgroundColor="@color/surface_light"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/pickup_store_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pickup_store_title"
            android:textColor="@color/text_primary_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_selected_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/pickup_store_placeholder"
            android:textColor="@color/text_primary_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_selected_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/pickup_store_address_placeholder"
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_selected_store_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/text_secondary_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_pickup_store_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/pickup_store_hint"
            android:textColor="@color/text_secondary_light"
            android:textSize="13sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_select_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/pickup_store_select_button"
            app:icon="@drawable/ic_store_"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:cornerRadius="24dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/primaryColor" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
